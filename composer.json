        }
    },

    "require": {
        "php": "^7.3 || ~8.0.0 || ~8.1.0",
        "ext-json": "*",
        "laminas/laminas-json": "^3.3",
        "laminas/laminas-server": "^2.11",
        "laminas/laminas-http": "^2.15",
        "laminas/laminas-json-server": "^3.4"
    },

    "require-dev": {
        "phpunit/phpunit": "~9.4",
        "phpstan/phpstan": "^0.12.49"
    }
}
